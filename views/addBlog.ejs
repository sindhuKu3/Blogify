<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AddBlog</title>
</head>
<style>
  img {
  position: absolute;
  left: 0px;
  top: 0px;
  z-index: -1;
  width:1260px ;
  height:800px ;
  opacity:0.5;
}
  form{

    margin-bottom:20px !important ;
  }
  label{
    font-size:20px ; 
    font-weight:bolder ; 
    color:white;
    margin-top:10px ;
  }
  input{
    width:400px  !important;
  }
  textarea{
     width:400px  !important;
  }
  button{
    margin-bottom:20px ; 
  }
  h1{
    color:aliceblue !important;
    text-shadow: 2px 3px 3px black;
    font-weight:bolder ; 
  }
</style>
<body>
  
    <%- include('./partials/nav') %>
    <img src="/images/addBlog.jpg" alt="error">
    <form class="mx-3 mt-5" action="/blog" method="post" enctype="multipart/form-data">
      <h1>Add Your Blog</h1>
      <div class="mb-3  mt-3 ">
          <label for="coverImage" class="form-label">CoverImage</label>
          <input class="form-control" id="coverImage" name="coverImage" area-describedby="coverImage" type="file" >
        </div>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title"name="title" aria-describedby="title">
      </div>
      <div class="mb-3">
              <label for="body" name="body">Body</label>
              <textarea class="form-control" name="body" id="body"></textarea> 
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <%- include('./partials/script') %>
     <%- include('./partials/footer') %>
</body>
</html>